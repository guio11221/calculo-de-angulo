<!DOCTYPE html>
<html>
  <head>
    <title>Calculadora de quadrado</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
      body {
        font-family: Arial, sans-serif;
      }

      h1 {
        margin-bottom: 20px;
      }

      form {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 30px;
      }

      label {
        margin-right: 10px;
      }

      input {
        padding: 5px;
        border-radius: 5px;
        border: 1px solid #ccc;
        margin-right: 10px;
      }

      button {
        padding: 5px 10px;
        border-radius: 5px;
        border: none;
        background-color: #0077cc;
        color: #fff;
        cursor: pointer;
      }

      button:hover {
        background-color: #005fa3;
      }

      canvas {
        max-width: 500px;
        margin: 0 auto;
      }
    </style>
  </head>
  <body>
    <h1>Calculadora de quadrado</h1>
    <form>
      <label for="lado">Lado:</label>
      <input type="number" id="lado" name="lado" />
      <button type="submit">Calcular</button>
    </form>
    <canvas id="myChart"></canvas>
    
    <div id="resultado"></div>


    <script>
      const form = document.querySelector("form");
      const canvas = document.getElementById("myChart");
      const ctx = canvas.getContext("2d");

      form.addEventListener("submit", (event) => {
        event.preventDefault();
        const lado = parseInt(document.getElementById("lado").value);
        const area = lado * lado;
        const perimetro = 4 * lado;

        const data = {
          labels: ["Área", "Perímetro"],
          datasets: [
            {
              label: "Quadrado",
              data: [area, perimetro],
              backgroundColor: [
                "rgba(255, 99, 132, 0.2)",
                "rgba(54, 162, 235, 0.2)",
              ],
              borderColor: ["rgba(255, 99, 132, 1)", "rgba(54, 162, 235, 1)"],
              borderWidth: 1,
            },
          ],
        };

        const options = {
          scales: {
            y: {
              beginAtZero: true,
            },
          },
        };

        const chart = new Chart(ctx, {
          type: "bar",
          data: data,
          options: options,
        });
      });
    </script>
  </body>
</html>
